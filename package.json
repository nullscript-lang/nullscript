{
  "name": "nullscript",
  "version": "1.0.1",
  "description": "NullScript: TypeScript with attitude - a fun parody language that compiles to identical TypeScript/JavaScript",
  "type": "module",
  "bin": {
    "nullc": "dist/cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "test:examples": "node dist/cli.js build examples/ --ts --outDir examples-output",
    "test:examples:js": "npm run test:examples && npx tsc examples-output/hello-world.ts --target ES2022 --module ES2022 --outDir examples-output-js --skipLibCheck --noEmitOnError false",
    "test:run": "node examples-output-js/hello-world.js",
    "clean": "rm -rf dist examples-output examples-output-js"
  },
  "keywords": [
    "typescript",
    "transpiler",
    "parody",
    "nullscript",
    "compiler",
    "language",
    "programming-language",
    "syntax-sugar",
    "fun",
    "educational"
  ],
  "author": "NullScript Language Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nullscript-lang/nullscript.git"
  },
  "bugs": {
    "url": "https://github.com/nullscript-lang/nullscript/issues"
  },
  "homepage": "https://github.com/nullscript-lang/nullscript#readme"
}
